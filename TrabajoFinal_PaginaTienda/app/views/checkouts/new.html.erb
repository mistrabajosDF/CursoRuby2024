<div class="max-w-3xl mx-auto bg-white p-6 rounded-2xl shadow-md space-y-6">
  <h2 class="text-2xl font-bold mb-4">Confirmación de pedido</h2>

  <div>
    <h3 class="text-xl font-semibold mb-2">Tus datos</h3>
    <p><span class="font-medium">Nombre:</span> <%= current_customer.name %></p>
  </div>

  <%= form_with url: checkout_path, method: :post, local: true, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :address, "Dirección de envío (Se actualizará en tu perfil):", class: "font-medium" %>
      <%= f.text_field :address, value: current_customer.address, required: true, class: "w-full p-2 rounded border border-gray-300 bg-blue-50 focus:bg-white focus:ring-2 focus:ring-blue-300 focus:outline-none" %>
    </div>

    <div>
      <h3 class="text-xl font-semibold mb-2">Productos:</h3>
      <ul class="list-disc list-inside space-y-1 text-gray-700">
        <% @cart.cart_items.each do |item| %>
          <li><%= item.product.name %> - Cantidad: <%= item.quantity %></li>
        <% end %>
      </ul>
      <p class="mt-2 font-medium text-lg"><strong>Total:</strong> $<%= @total %></p>
    </div>

    <div class="mb-6">
      <h3 class="text-xl font-semibold mb-2">Datos de pago</h3>

      <div class="mb-4">
        <%= f.label :card_number, "Número de tarjeta", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :card_number, id: "card_number", placeholder: "XXXX-XXXX-XXXX-XXXX", required: true,
              class: "w-full p-2 rounded border border-gray-300 bg-blue-50 focus:bg-white focus:ring-2 focus:ring-blue-300 focus:outline-none" %>
      </div>

      <div class="mb-4">
        <%= f.label :expiration, "Fecha de vencimiento", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :expiration, id: "expiration", placeholder: "MM/AA", required: true,
              class: "w-full p-2 rounded border border-gray-300 bg-blue-50 focus:bg-white focus:ring-2 focus:ring-blue-300 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :cvv, "CVV", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :cvv, d: "cvv", placeholder: "123", required: true,
              class: "w-full p-2 rounded border border-gray-300 bg-blue-50 focus:bg-white focus:ring-2 focus:ring-blue-300 focus:outline-none" %>
      </div>


    <%= f.hidden_field :state, value: true %>
    <%= f.hidden_field :customer_name, value: current_customer.name %>

    <div>
      <%= f.submit "Confirmar compra", data: { turbo: false }, class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition" %>
    </div>
  <% end %>
</div>


<script>
  function initCreditCardFormatting() {
    const cardInput = document.querySelector("#card_number");
    const expInput = document.querySelector("#expiration");
    const cvvInput = document.querySelector("#cvv");
    
    if (cardInput) {
      cardInput.addEventListener("input", function (e) {
        let value = e.target.value.replace(/\D/g, "").slice(0, 16); // solo números, máx 16
        value = value.replace(/(.{4})/g, "$1-").replace(/-$/, "");  // agrega guiones
        e.target.value = value;
      });
    }
    
    if (expInput) {
      expInput.addEventListener("input", function (e) {
        let value = e.target.value.replace(/\D/g, "").slice(0, 4); // solo números, máx 4
        if (value.length >= 3) {
          value = value.slice(0, 2) + "/" + value.slice(2);
        }
        e.target.value = value;
      });
    }
    
    if (cvvInput) {
      cvvInput.addEventListener("input", function (e) {
        e.target.value = e.target.value.replace(/\D/g, "").slice(0, 3); // solo 3 números
      });
    }
  }
  
  initCreditCardFormatting();
</script>
