<div class="max-w-md mx-auto bg-white p-6 rounded-2xl shadow-md mt-10">
  <h2 class="text-2xl font-bold mb-6 text-center">¿Olvidaste tu contraseña?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "space-y-4") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "mt-1 block w-full p-2 rounded border border-gray-300 bg-blue-50 focus:bg-white focus:ring-2 focus:ring-blue-300 focus:outline-none" %>
    </div>

    <div>
      <%= f.submit "Enviar instrucciones de recuperación",
            class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>

