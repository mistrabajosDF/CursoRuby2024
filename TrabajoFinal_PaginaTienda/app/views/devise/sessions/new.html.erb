<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-xl">
    <h2 class="text-3xl font-bold mb-8 text-center text-gray-900">Iniciar sesión</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-8" }) do |f| %>
      
      <div class="space-y-6">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-4 py-4 border-2 border-gray-200 rounded-lg shadow-sm 
                       focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500
                       transition duration-200 text-base",
                placeholder: "tu@email.com" %>
        </div>
        
        <div>
          <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full px-4 py-4 border-2 border-gray-200 rounded-lg shadow-sm 
                       focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500
                       transition duration-200 text-base",
                placeholder: "••••••••" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between pt-2">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Recuérdame", class: "ml-3 text-sm text-gray-700" %>
          </div>
        </div>
      <% end %>

      <div class="pt-4">
        <%= f.submit "Iniciar sesión",  data: { turbo: false }, class: "w-full py-4 px-6 bg-green-600 text-white
              rounded-lg hover:bg-green-700 transition duration-200 transform hover:scale-105
              font-semibold text-base shadow-lg focus:ring-4 focus:ring-green-300" %>
      </div>
    <% end %>
    
    <div class="mt-8 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>